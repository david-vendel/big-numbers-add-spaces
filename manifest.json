{
  "manifest_version": 3,
  "name": "Big Numbers Add Spaces",
  "version": "1.0",
  "description": "Adds spaces to huge numbers on web pages.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}